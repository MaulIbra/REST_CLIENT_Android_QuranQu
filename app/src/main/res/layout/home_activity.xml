<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Bandung"
            android:textColor="@color/textColor"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/textColor"
            android:text="Ahad, 6 Januari 2020" />


            <androidx.cardview.widget.CardView
                android:background="@drawable/ic_custom_card_menu"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/blue"
                android:elevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/ic_custom_card_menu"
                        android:backgroundTint="@color/white"
                        android:layout_height="match_parent"
                        android:gravity="center|center_vertical"
                        android:layout_margin="16dp">

                        <ImageView
                            android:id="@+id/ivCompas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_compass"
                            />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="16dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:text="15:10"
                            />

                        <TextView
                            android:id="@+id/tvLeftTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 Jam 35 Menit"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Menuju"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvKetSholat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ashar"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_custom_card_menu"
                android:backgroundTint="@color/silver"
                android:padding="16dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/terakhir_di_baca"
                    android:fontFamily="@font/poppinsmedium"
                    android:textSize="14sp"
                    android:textColor="@color/textColor"
                    />

                <TextView
                    android:id="@+id/tvLastSurah"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Al-Fatihah 1"
                    android:textSize="14sp"
                    android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                    android:drawableTint="@color/green"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/poppinsregular" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvWaktuSholat"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:layout_marginRight="16dp"
                    android:layout_height="150dp"
                    android:elevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:background="@drawable/ic_custom_card_menu"
                    android:backgroundTint="@color/pink">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waktu\nSholat"
                        android:padding="16dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_waktu_sholat" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvMembacaQuran"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_height="150dp"
                    android:elevation="2dp"
                    android:clickable="true"
                    app:cardUseCompatPadding="true"
                    android:background="@drawable/ic_custom_card_menu"
                    android:backgroundTint="@color/skyblue">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Membaca\nAl Qur'an"
                        android:padding="16dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        />

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="bottom|end"
                        android:src="@mipmap/ic_membaca_quran" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvKumpulanDoa"
                    android:layout_width="0dp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_marginRight="32dp"
                    android:layout_height="150dp"
                    android:elevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:background="@drawable/ic_custom_card_menu"
                    android:backgroundTint="@color/orange">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kumpulan\nDo'a"
                        android:padding="14dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom|end"
                        android:src="@mipmap/ic_kumpulan_doa" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>