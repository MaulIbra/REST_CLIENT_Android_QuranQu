<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LlitemSurah"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:weightSum="7"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvNomorSurah"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:background="@drawable/ic_frame"
        android:text="10"
        android:textSize="12sp"
        android:textColor="@color/textColor"
        android:gravity="center_horizontal|center_vertical"
        />

    <LinearLayout
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNamaSurah"
                android:layout_width="wrap_content"
                android:textColor="@color/textColor"
                android:text="Al-Fatihah"
                android:textSize="12sp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvKotaAyat"
                android:layout_width="wrap_content"
                android:textColor="@color/textColor"
                android:text="Mekah | 7 Ayat"
                android:textSize="10sp"
                android:fontFamily="@font/poppinsregular"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:orientation="vertical"
            android:gravity="end"
            >

            <TextView
                android:id="@+id/tvNamaSurahArab"
                android:layout_width="wrap_content"
                android:textColor="@color/blue"
                android:text="الفاتحة"
                android:textSize="12sp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvSurahArti"
                android:layout_width="wrap_content"
                android:textColor="@color/textColor"
                android:text="Pembukaan"
                android:textSize="10sp"
                android:fontFamily="@font/poppinsregular"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>